---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pricing - KV Storage" description="Simple, transparent pricing">
  <section class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-12">Simple Pricing</h1>
      <div class="grid md:grid-cols-3 lg:grid-cols-5 gap-6">
        <div class="border rounded-lg p-6 bg-white">
          <h3 class="text-xl font-bold mb-3">Free</h3>
          <p class="text-3xl font-bold mb-4">$0<span class="text-base">/mo</span></p>
          <ul class="space-y-2 mb-6 text-sm text-gray-600">
            <li>100K requests/month</li>
            <li>10GB storage</li>
            <li>Community support</li>
          </ul>
          <a href="/dashboard" class="block text-center bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 text-sm">Get Started</a>
        </div>
        <div class="border rounded-lg p-6 bg-white">
          <h3 class="text-xl font-bold mb-3">Starter</h3>
          <p class="text-3xl font-bold mb-4">$5<span class="text-base">/mo</span></p>
          <ul class="space-y-2 mb-6 text-sm text-gray-600">
            <li>500K requests/month</li>
            <li>25GB storage</li>
            <li>Email support</li>
          </ul>
          <a href="/dashboard" class="block text-center bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 text-sm">Upgrade</a>
        </div>
        <div class="border-2 border-green-500 rounded-lg p-6 bg-white relative">
          <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-green-500 text-white px-3 py-1 rounded-full text-xs font-semibold">Most Popular</div>
          <h3 class="text-xl font-bold mb-3">Pro</h3>
          <p class="text-3xl font-bold mb-4">$15<span class="text-base">/mo</span></p>
          <ul class="space-y-2 mb-6 text-sm text-gray-600">
            <li>1M requests/month</li>
            <li>100GB storage</li>
            <li>Priority support</li>
          </ul>
          <a href="/dashboard" class="block text-center bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 text-sm">Upgrade</a>
        </div>
        <div class="border rounded-lg p-6 bg-white">
          <h3 class="text-xl font-bold mb-3">Scale</h3>
          <p class="text-3xl font-bold mb-4">$49<span class="text-base">/mo</span></p>
          <ul class="space-y-2 mb-6 text-sm text-gray-600">
            <li>5M requests/month</li>
            <li>250GB storage</li>
            <li>SLA 99.9%</li>
          </ul>
          <a href="/dashboard" class="block text-center bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 text-sm">Upgrade</a>
        </div>
        <div class="border rounded-lg p-6 bg-white">
          <h3 class="text-xl font-bold mb-3">Business</h3>
          <p class="text-3xl font-bold mb-4">$149<span class="text-base">/mo</span></p>
          <ul class="space-y-2 mb-6 text-sm text-gray-600">
            <li>20M requests/month</li>
            <li>1TB storage</li>
            <li>SLA 99.95%</li>
          </ul>
          <a href="/dashboard" class="block text-center bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 text-sm">Upgrade</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
