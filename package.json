{
  "name": "kv-storage",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/infrastructure",
    "packages/landing",
    "packages/dashboard",
    "packages/sdk-js"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "build:frontend": "npm run build -w landing && npm run build -w dashboard",
    "build:sdk": "npm run build -w @kv-storage/client",
    "deploy:infra": "npm run deploy -w @kv/infrastructure",
    "deploy:frontend": "npm run build -w landing && npm run build -w dashboard",
    "deploy:all": "npm run build:frontend && npm run deploy -w infrastructure",
    "loadtest": "artillery run artillery.yml",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "artillery": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
